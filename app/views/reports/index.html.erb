  <input type="date" name="todate" value=""><br> -->
  
  
  
</body>
</html>

<div id="report_result">
	
</div>
<script type="text/javascript">
    $(function () {
        $('#datetimepicker6').datetimepicker( {format:'YYYY-MM-DD', allowInputToggle: true});
        $('#datetimepicker7').datetimepicker({ format:'YYYY-MM-DD',allowInputToggle: true //Important! See issue #1075
        });
        $("#datetimepicker6").on("dp.change", function (e) {
            $('#datetimepicker7').data("DateTimePicker").minDate(e.date);
        });
        $("#datetimepicker7").on("dp.change", function (e) {
            $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
        });
    });
</script>
